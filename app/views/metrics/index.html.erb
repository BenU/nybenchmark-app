<main class="container">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1>Metrics</h1>
    <% if user_signed_in? %>
      <div><%= link_to "New Metric", new_metric_path, role: "button" %></div>
    <% end %>
  </div>

  <figure>
    <table role="grid">
      <thead>
        <tr>
          <th scope="col">
            <%= sortable_column_header(
                  column: "label",
                  label: "Label",
                  path: :metrics_path,
                  current_sort: params[:sort],
                  current_direction: params[:direction]
                ) %>
          </th>
          <th scope="col">
            <%= sortable_column_header(
                  column: "value_type",
                  label: "Type",
                  path: :metrics_path,
                  current_sort: params[:sort],
                  current_direction: params[:direction]
                ) %>
          </th>
          <th scope="col">Unit</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        <% @metrics.each do |metric| %>
          <tr>
            <td>
              <%= link_to metric.label, metric_path(metric) %>
            </td>
            <td><%= metric.value_type.humanize %></td>
            <td><%= metric.unit %></td>
            <td><%= metric.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </figure>

  <% if @pagy.pages > 1 %>
    <section>
      <%== @pagy.info_tag %>
      <%== @pagy.series_nav(aria_label: "Metric pages") %>
    </section>
  <% end %>
</main>
