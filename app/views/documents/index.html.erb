<% content_for :title, "Documents" %>

<main class="container">
  <div class="grid">
    <hgroup>
      <h1>Documents</h1>
      <p>Source files for all verified data.</p>
    </hgroup>
    <div style="text-align: right; align-self: center;">
      <%= link_to "New document", new_document_path, role: "button" %>
    </div>
  </div>

  <figure>
    <table role="grid">
      <thead>
        <tr>
          <th>Title</th>
          <th>Entity</th>
          <th>Type</th>
          <th>Year</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td>
              <%= link_to document.title, document %>
              <% if document.source_url.present? %>
                <br>
                <small><%= link_to "Source Link", document.source_url, target: "_blank" %></small>
              <% end %>
            </td>
            <td><%= document.entity.name %></td>
            <td><%= document.doc_type.humanize %></td>
            <td><%= document.fiscal_year %></td>
            <td>
              <%= link_to "View", document %> | 
              <%= link_to "Edit", edit_document_path(document) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </figure>
</main>