<% content_for :title, "Documents" %>

<main class="container">
  <div class="grid">
    <hgroup>
      <h1>Documents</h1>
      <p>Source files for all verified data.</p>
    </hgroup>
    <% if user_signed_in? %>
      <div style="text-align: right; align-self: center;">
        <%= link_to "New document", new_document_path, role: "button" %>
      </div>
    <% end %>
  </div>

  <form method="get" action="<%= documents_path %>">
    <%= hidden_field_tag :sort, params[:sort] if params[:sort].present? %>
    <%= hidden_field_tag :direction, params[:direction] if params[:direction].present? %>

    <fieldset>
      <legend>Filters</legend>
      <div class="grid">
        <label>
          Document Type
          <%= select_tag :doc_type,
                options_for_select(@doc_types.map { |t| [t.humanize, t] }, params[:doc_type]),
                prompt: "All Types" %>
        </label>

        <label>
          Fiscal Year
          <%= select_tag :fiscal_year,
                options_for_select(@fiscal_years, params[:fiscal_year]),
                prompt: "All Years" %>
        </label>

        <label>
          Entity
          <%= select_tag :entity_id,
                options_from_collection_for_select(@entities_for_filter, :id, :name, params[:entity_id]),
                prompt: "All Entities" %>
        </label>

        <div style="display: flex; gap: 0.5rem; align-items: flex-end;">
          <%= link_to "Clear", documents_path, role: "button", class: "secondary outline" %>
          <%= submit_tag "Apply", name: nil %>
        </div>
      </div>
    </fieldset>
  </form>

  <figure>
    <table role="grid">
      <thead>
        <tr>
          <th>
            <%= sortable_column_header(
                  column: "title",
                  label: "Title",
                  path: :documents_path,
                  current_sort: params[:sort],
                  current_direction: params[:direction]
                ) %>
          </th>
          <th>
            <%= sortable_column_header(
                  column: "entity_name",
                  label: "Entity",
                  path: :documents_path,
                  current_sort: params[:sort],
                  current_direction: params[:direction]
                ) %>
          </th>
          <th>Type</th>
          <th>
            <%= sortable_column_header(
                  column: "fiscal_year",
                  label: "Year",
                  path: :documents_path,
                  current_sort: params[:sort],
                  current_direction: params[:direction],
                  default_direction: "desc"
                ) %>
          </th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td>
              <%= link_to document.title, document %>
              <% if document.source_url.present? %>
                <br>
                <small><%= link_to "Source Link", document.source_url, target: "_blank" %></small>
              <% end %>
            </td>
            <td><%= document.entity.name %></td>
            <td><%= document.doc_type.humanize %></td>
            <td><%= document.fiscal_year %></td>
            <td>
              <%= link_to "View", document %>
              <% if user_signed_in? %>
                | <%= link_to "Edit", edit_document_path(document) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </figure>

  <% if @pagy.pages > 1 %>
    <section>
      <%== @pagy.info_tag %>
      <%== @pagy.series_nav(aria_label: "Document pages") %>
    </section>
  <% end %>
</main>