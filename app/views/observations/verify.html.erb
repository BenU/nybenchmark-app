<div class="w-full h-full flex flex-col md:flex-row overflow-hidden"
     data-controller="pdf-navigator"
     data-pdf-navigator-url-value="<%= @observation.document&.file&.attached? ? rails_blob_url(@observation.document.file, disposition: :inline) : '' %>"
     data-pdf-navigator-initial-page-value="<%= @observation.pdf_page || 1 %>">

  <%# LEFT PANE: PDF Viewer (60% width on desktop) %>
  <%= render "pdf_viewer", observation: @observation %>

  <%# RIGHT PANE: Verification Form (40% width) - COMPACT %>
  <div class="w-full md:w-2/5 h-1/2 md:h-full overflow-y-auto px-2 py-1 bg-white">
    <%# Header row %>
    <div class="flex justify-between items-start mb-2">
      <div>
        <h2 class="verify-header-title text-base font-semibold text-gray-900">Verify: <%= @observation.metric.label %> for <%= @observation.entity.name %></h2>
        <p class="text-sm text-gray-600"><%= @observation.document.title %> (FY<%= @observation.fiscal_year %>)</p>
      </div>
      <span class="px-2 py-0.5 rounded text-xs font-semibold uppercase flex-shrink-0
        <%= @observation.verified? ? 'bg-green-100 text-green-800' :
            @observation.flagged? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= @observation.verification_status %>
      </span>
    </div>

    <%= form_with(model: @observation, class: "verification-form") do |form| %>
      <% if @observation.errors.any? %>
        <div class="bg-red-50 text-red-700 p-1 rounded mb-1 text-xs">
          <% @observation.errors.full_messages.each do |message| %>
            <span><%= message %></span>
          <% end %>
        </div>
      <% end %>

      <%= render "observation_form_fields", form: form, observation: @observation %>

      <%# Status %>
      <div class="mb-2">
        <%= form.label :verification_status, "Status", class: "block text-xs font-medium text-gray-700" %>
        <%= form.select :verification_status,
            Observation.verification_statuses.keys.map { |k| [k.humanize, k] },
            {},
            class: "mt-0.5 block w-32 text-sm rounded border-gray-300 shadow-sm px-2 py-1"
        %>
      </div>

      <%# Action buttons - all on one row, compact %>
      <div class="pt-1 border-t border-gray-200 flex items-center gap-2">
        <%= form.button "Verify & Next",
            name: "commit_action",
            value: "verify_next",
            class: "px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700 text-xs font-semibold cursor-pointer"
        %>
        <%= form.submit "Save",
            class: "px-3 py-1 bg-white border border-gray-300 text-gray-700 rounded hover:bg-gray-50 text-xs cursor-pointer"
        %>
        <%= form.button "Skip",
            name: "commit_action",
            value: "skip_next",
            class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 text-xs cursor-pointer",
            title: "Save and skip to next"
        %>
        <%= link_to "Cancel", observations_path, class: "px-2 py-1 text-xs text-gray-500 hover:text-gray-900 ml-auto" %>
      </div>
    <% end %>
  </div>
</div>
