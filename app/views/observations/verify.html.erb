<div class="w-full h-full flex flex-col md:flex-row overflow-hidden"
     data-controller="pdf-navigator"
     data-pdf-navigator-url-value="<%= @observation.document&.file&.attached? ? rails_blob_url(@observation.document.file, disposition: :inline) : '' %>"
     data-pdf-navigator-initial-page-value="<%= @observation.pdf_page || 1 %>">

  <%# LEFT PANE: PDF Viewer (60% width on desktop) %>
  <div class="w-full md:w-3/5 h-1/2 md:h-full border-r border-gray-300 bg-gray-100 flex flex-col">
    <% if @observation.document&.file&.attached? %>
      <%# Toolbar - compact %>
      <div class="flex items-center gap-1 px-1 py-0.5 bg-gray-200 border-b border-gray-300 flex-shrink-0">
        <button type="button"
                data-action="pdf-navigator#previousPage"
                class="px-2 py-0.5 bg-white border border-gray-300 rounded hover:bg-gray-50 text-sm"
                title="Previous page">&#9664;</button>
        <span class="text-xs font-mono">
          <span data-pdf-navigator-target="pageDisplay">1</span>/<span data-pdf-navigator-target="totalPages">?</span>
        </span>
        <button type="button"
                data-action="pdf-navigator#nextPage"
                class="px-2 py-0.5 bg-white border border-gray-300 rounded hover:bg-gray-50 text-sm"
                title="Next page">&#9654;</button>
        <span class="mx-1 text-gray-300">|</span>
        <select data-pdf-navigator-target="zoomSelect"
                data-action="change->pdf-navigator#zoomChanged"
                class="text-xs border border-gray-300 rounded px-1 py-0.5 bg-white">
          <option value="fit-width" selected>Fit Width</option>
          <option value="fit-page">Fit Page</option>
          <option value="0.5">50%</option>
          <option value="0.75">75%</option>
          <option value="1">100%</option>
          <option value="1.25">125%</option>
          <option value="1.5">150%</option>
          <option value="2">200%</option>
        </select>
        <span class="mx-1 text-gray-300">|</span>
        <button type="button"
                data-action="pdf-navigator#captureCurrentPage"
                class="px-2 py-0.5 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs"
                title="Capture current page to form">Capture</button>
      </div>

      <%# Canvas container %>
      <div class="flex-1 overflow-auto relative" data-pdf-navigator-target="container">
        <canvas data-pdf-navigator-target="canvas"
                data-action="click->pdf-navigator#canvasClicked"
                class="mx-auto cursor-pointer"></canvas>
        <div data-pdf-navigator-target="loading"
             class="absolute inset-0 flex items-center justify-center bg-gray-100 bg-opacity-90">
          <div class="flex flex-col items-center gap-1">
            <div class="w-6 h-6 border-3 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
            <span class="text-gray-600 text-xs">Loading...</span>
          </div>
        </div>
        <div data-pdf-navigator-target="error"
             class="hidden absolute inset-0 flex items-center justify-center bg-red-50 text-red-700 p-4 text-center text-sm"></div>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center h-full text-gray-500 p-4 text-center">
        <p class="text-sm">No PDF attached.</p>
        <% if @observation.document.source_url.present? %>
          <a href="<%= @observation.document.source_url %>" target="_blank" class="text-blue-600 underline text-sm mt-1">Open Source URL</a>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# RIGHT PANE: Verification Form (40% width) - COMPACT %>
  <div class="w-full md:w-2/5 h-1/2 md:h-full overflow-y-auto px-2 py-1 bg-white">
    <%# Header row - compact, high contrast %>
    <div class="flex justify-between items-center mb-1">
      <div>
        <span class="text-[11px] font-semibold" style="color: #111;">Verify: <%= @observation.metric.label %></span>
        <p class="text-[10px] text-gray-600"><%= @observation.entity.name %> (FY<%= @observation.fiscal_year %>)</p>
      </div>
      <span class="px-2 py-0.5 rounded text-xs font-semibold uppercase
        <%= @observation.verified? ? 'bg-green-100 text-green-800' :
            @observation.flagged? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= @observation.verification_status %>
      </span>
    </div>

    <%= form_with(model: @observation, class: "verification-form") do |form| %>
      <% if @observation.errors.any? %>
        <div class="bg-red-50 text-red-700 p-1 rounded mb-1 text-xs">
          <% @observation.errors.full_messages.each do |message| %>
            <span><%= message %></span>
          <% end %>
        </div>
      <% end %>

      <%# PDF Page - compact blue box %>
      <% if @observation.document&.file&.attached? %>
        <div class="bg-blue-50 px-2 py-1 rounded border border-blue-200 mb-1">
          <div class="flex items-center gap-2">
            <%= form.label :pdf_page, "PDF Page:", class: "text-xs font-semibold text-blue-900" %>
            <%= form.number_field :pdf_page,
                min: 1,
                class: "w-16 text-sm rounded border-gray-300 shadow-sm px-1 py-0.5 font-mono",
                placeholder: "1",
                data: { pdf_navigator_target: "pageInput", action: "input->pdf-navigator#goToPage" }
            %>
            <span class="text-xs text-blue-600">Click PDF or Capture</span>
          </div>
        </div>
      <% end %>

      <%# Citation - right below PDF Page since they're related %>
      <div class="mb-1">
        <%= form.label :page_reference, "Citation (printed page)", class: "block text-xs font-medium text-gray-700" %>
        <%= form.text_field :page_reference, placeholder: "p. 42", class: "mt-0.5 block w-full text-sm rounded border-gray-300 shadow-sm px-2 py-1" %>
      </div>

      <%# Values row with note %>
      <div class="mb-1">
        <p class="text-xs text-gray-500 mb-0.5 italic">Value (numeric or text, not both):</p>
        <div class="grid grid-cols-2 gap-2">
          <div>
            <%= form.label :value_numeric, "Numeric", class: "block text-xs font-medium text-gray-700" %>
            <%= form.number_field :value_numeric, step: :any, class: "mt-0.5 block w-full text-sm rounded border-gray-300 shadow-sm px-2 py-1" %>
          </div>
          <div>
            <%= form.label :value_text, "Text", class: "block text-xs font-medium text-gray-700" %>
            <%= form.text_field :value_text, class: "mt-0.5 block w-full text-sm rounded border-gray-300 shadow-sm px-2 py-1" %>
          </div>
        </div>
      </div>

      <%# Notes - compact %>
      <div class="mb-1">
        <%= form.label :notes, "Notes", class: "block text-xs font-medium text-gray-700" %>
        <%= form.text_area :notes, rows: 2, placeholder: "Optional...", class: "mt-0.5 block w-full text-sm rounded border-gray-300 shadow-sm px-2 py-1" %>
      </div>

      <%# Status %>
      <div class="mb-2">
        <%= form.label :verification_status, "Status", class: "block text-xs font-medium text-gray-700" %>
        <%= form.select :verification_status,
            Observation.verification_statuses.keys.map { |k| [k.humanize, k] },
            {},
            class: "mt-0.5 block w-32 text-sm rounded border-gray-300 shadow-sm px-2 py-1"
        %>
      </div>

      <%# Action buttons - all on one row, compact %>
      <div class="pt-1 border-t border-gray-200 flex items-center gap-2">
        <%= form.button "Verify & Next",
            name: "commit_action",
            value: "verify_next",
            class: "px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700 text-xs font-semibold cursor-pointer"
        %>
        <%= form.submit "Save",
            class: "px-3 py-1 bg-white border border-gray-300 text-gray-700 rounded hover:bg-gray-50 text-xs cursor-pointer"
        %>
        <%= form.button "Skip",
            name: "commit_action",
            value: "skip_next",
            class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 text-xs cursor-pointer",
            title: "Save and skip to next"
        %>
        <%= link_to "Cancel", observations_path, class: "px-2 py-1 text-xs text-gray-500 hover:text-gray-900 ml-auto" %>
      </div>
    <% end %>
  </div>
</div>
