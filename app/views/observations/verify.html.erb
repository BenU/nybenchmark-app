<div class="w-full h-screen flex flex-col md:flex-row overflow-hidden" 
     data-controller="pdf-navigator">

  <%# LEFT PANE: PDF Viewer %>
  <div class="w-full md:w-1/2 h-1/2 md:h-full border-r border-gray-300 bg-gray-100 relative">
    <% if @observation.document&.file&.attached? %>
      <iframe 
        src="<%= rails_blob_path(@observation.document.file, disposition: :inline) %>#page=<%= @observation.pdf_page || 1 %>" 
        class="w-full h-full" 
        frameborder="0"
        data-pdf-navigator-target="iframe"
        id="pdf-viewer">
      </iframe>
    <% else %>
      <div class="flex flex-col items-center justify-center h-full text-gray-500 p-6 text-center">
        <p>No PDF attached to document.</p>
        <% if @observation.document.source_url.present? %>
          <a href="<%= @observation.document.source_url %>" target="_blank" class="text-blue-600 underline mt-2">
            Open Source URL
          </a>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# RIGHT PANE: Verification Form %>
  <div class="w-full md:w-1/2 h-1/2 md:h-full overflow-y-auto p-6 bg-white">
    <div class="mb-6 flex justify-between items-start">
      <div>
        <h1 class="text-2xl font-bold mb-1">Verification Cockpit</h1>
        <p class="text-sm text-gray-600">
          <%= @observation.entity.name %> | <%= @observation.metric.label %> (<%= @observation.fiscal_year %>)
        </p>
      </div>
      <span class="px-3 py-1 rounded-full text-sm font-semibold uppercase tracking-wide
        <%= @observation.verified? ? 'bg-green-100 text-green-800' : 
            @observation.flagged? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= @observation.verification_status %>
      </span>
    </div>

    <%= form_with(model: @observation, class: "verification-form space-y-6") do |form| %>
      <% if @observation.errors.any? %>
        <div class="bg-red-50 text-red-700 p-4 rounded mb-4">
          <ul class="list-disc pl-5">
            <% @observation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if @observation.document&.file&.attached? %>
        <div class="bg-blue-50 p-4 rounded border border-blue-100">
          <%= form.label :pdf_page, "PDF Navigator Page (Absolute Index)", class: "block text-sm font-bold text-blue-900 mb-1" %>
          <div class="flex gap-3">
            <%= form.number_field :pdf_page,
                min: 1,
                class: "w-24 rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono text-lg",
                placeholder: "1",
                data: {
                  pdf_navigator_target: "pageInput",
                  action: "input->pdf-navigator#updatePage"
                }
            %>
            <span class="text-xs text-blue-600 self-center">
              Type a page number to jump the viewer instantly.
            </span>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= form.label :value_numeric, "Value (Numeric)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :value_numeric, step: :any, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
        </div>

        <div>
          <%= form.label :value_text, "Value (Text - Optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :value_text, rows: 2, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
        </div>

        <div>
          <%= form.label :page_reference, "Original Citation (Printed Page)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :page_reference, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
        </div>

        <div>
          <%= form.label :notes, "Reviewer Notes", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
        </div>

        <div>
          <%= form.label :verification_status, "Status", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :verification_status, 
              Observation.verification_statuses.keys.map { |k| [k.humanize, k] },
              {},
              class: "mt-1 block w-full rounded border-gray-300 shadow-sm" 
          %>
        </div>
      </div>

      <div class="pt-6 border-t border-gray-200 flex gap-4">
        <%= form.button "Verify & Next", 
            name: "commit_action", 
            value: "verify_next",
            class: "px-6 py-3 bg-green-600 text-white rounded hover:bg-green-700 font-bold cursor-pointer shadow" 
        %>
        
        <%= form.submit "Save & Stay", 
            class: "px-6 py-3 bg-white border border-gray-300 text-gray-700 rounded hover:bg-gray-50 cursor-pointer" 
        %>

        <%= link_to "Cancel", observations_path, class: "px-4 py-3 text-gray-500 hover:text-gray-900 ml-auto" %>
      </div>
    <% end %>
  </div>
</div>