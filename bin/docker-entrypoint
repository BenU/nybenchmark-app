#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare

  # Regenerate sitemap on every deploy (uploads to DO Spaces)
  ./bin/rails sitemap:refresh || echo "Sitemap refresh failed (non-fatal)"
fi

exec "${@}"
