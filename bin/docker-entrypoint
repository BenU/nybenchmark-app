#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare

  # Regenerate sitemap AFTER server starts (non-blocking).
  # Runs in background so Puma can begin accepting health checks immediately.
  (sleep 15 && ./bin/rails sitemap:refresh || echo "Sitemap refresh failed (non-fatal)") &
fi

exec "${@}"
